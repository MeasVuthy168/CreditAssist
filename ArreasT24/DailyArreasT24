  </div>  <script>
    let allData = [];

    async function fetchData() {
      const res = await fetch("https://secure-backend-tzj9.onrender.com/api/arreas-t24");
      allData = await res.json();
      renderTable(allData);
      populateFilters(allData);
    }

    function renderTable(data) {
      const head = document.getElementById("tableHead");
      const body = document.getElementById("tableBody");
      head.innerHTML = "";
      body.innerHTML = "";

      if (data.length === 0) {
        body.innerHTML = "<tr><td colspan='99'>គ្មានទិន្នន័យ</td></tr>";
        return;
      }

      const columns = Object.keys(data[0]);
      const headRow = document.createElement("tr");
      columns.forEach(col => {
        const th = document.createElement("th");
        th.textContent = col;
        headRow.appendChild(th);
      });
      head.appendChild(headRow);

      data.forEach(row => {
        const tr = document.createElement("tr");
        columns.forEach(col => {
          const td = document.createElement("td");
          td.textContent = row[col] || "";
          tr.appendChild(td);
        });
        body.appendChild(tr);
      });
    }

    function populateFilters(data) {
      const fields = {
        teamLeader: "Team_Leader",
        branch: "Branch",
        coResponse: "CO_Response",
        coId: "CO_ID",
        osClassify: "OS_Classify",
        occu: "Occu",
        class: "Class",
        pd: "PD"
      };

      for (const id in fields) {
        const select = document.getElementById(id);
        const values = [...new Set(data.map(item => item[fields[id]]).filter(Boolean))].sort();
        values.forEach(val => {
          const opt = document.createElement("option");
          opt.value = val;
          opt.textContent = val;
          select.appendChild(opt);
        });
        select.addEventListener("change", applyFilters);
      }
    }

    function applyFilters() {
      const filters = {
        teamLeader: document.getElementById("teamLeader").value,
        branch: document.getElementById("branch").value,
        coResponse: document.getElementById("coResponse").value,
        coId: document.getElementById("coId").value,
        osClassify: document.getElementById("osClassify").value,
        occu: document.getElementById("occu").value,
        class: document.getElementById("class").value,
        pd: document.getElementById("pd").value
      };

      const filtered = allData.filter(item => {
        return Object.entries(filters).every(([key, value]) => {
          return value === "" || item[key.replace(/([A-Z])/g, '_$1').toUpperCase()] === value;
        });
      });

      renderTable(filtered);
    }

    document.getElementById("searchInput").addEventListener("input", (e) => {
      const term = e.target.value.toLowerCase();
      const filtered = allData.filter(item => {
        return (item.Customer || "").toLowerCase().includes(term) ||
               (item.CIF || "").toLowerCase().includes(term);
      });
      renderTable(filtered);
    });

    window.onload = fetchData;
  </script></body>
